
@model IEnumerable<LoanEMICalculator.Entities.tblLoanEMITransaction>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InstallmentNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opening)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Principle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Interest)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EMI)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Closing)
