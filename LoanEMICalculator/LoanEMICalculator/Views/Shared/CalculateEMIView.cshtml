                @Html.DisplayFor(modelItem => item.Opening)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Principle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Interest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Closing)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CummulativeInterest)
            </td>
        </tr>
    }

</table>



